<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.AndroidUI.book.BookMessageManage">

    <Button
        android:id="@+id/button18"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="newBook"
        android:text="插入图书信息"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="deleteOne"
        android:text="删除图书"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button19"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="select_book"
        android:text="图书信息查询"
        android:textSize="25sp"

        />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="update"
        android:text="图书信息修改"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button20"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="book_showAll"
        android:text="显示所有图书信息"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button21"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="deleteAll"
        android:text="删除所有图书信息"
        android:textSize="25sp" />

    <Button
        android:id="@+id/aveAll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:onClick="saveAll"
        android:text="保存初始图书信息"
        android:textSize="25sp" />
</LinearLayout>
